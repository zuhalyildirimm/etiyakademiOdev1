#ŞARTBLOKLARI

dolarDun=19.03
dolarBugun=19.03
if dolarDun>dolarBugun:
  print("azalış oku")
  print("bitti")
elif dolarDun<dolarBugun:
  print("artış oku")
  
else:
  print("eşittir oku")
  print("bitti")
  
  
