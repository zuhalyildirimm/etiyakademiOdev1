print(sonucMesaj)




#LİSTELER

krediler=["hızlı kredi","maaşını halkbank'tan alanlar","mutlu emekli ihtiyaç kredisi"]
print(krediler)
print(krediler[0])
print(krediler[1])
print(krediler[2])


print(len(krediler)) #length
krediler[0]="çabuk kredi"
print(krediler)
