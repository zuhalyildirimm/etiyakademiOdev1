#fonksiyon oluşturmak için def kullanırız;
def kredilerilistele():


  krediler=["hızlı kredi","maaşını halkbank'tan alanlar","mutlu emekli ihtiyaç kredisi"]
  for kredi in krediler:
    print("<option>"+kredi+"<option>")

kredilerilistele()
