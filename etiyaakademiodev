#değişkenler

haber = "Haberiniz olsun"  #string

print(haber)
baslik = "Haberiniz olsun"
vade = 6  #integer
faizOrani1 = 1.47  #float
faizOrani2 = 1.45
print(baslik)
print(type(baslik))
print(type(vade))
print(type(faizOrani1))

mesaj = "Hoşgeldin"
musteriAdi = "zühal"
musteriSoyadi = "yıldırım"
#sayi1=10
#sayi2=20
#print(sayi1+sayi2)

